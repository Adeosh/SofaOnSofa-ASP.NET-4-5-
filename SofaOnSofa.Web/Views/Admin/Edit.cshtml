@model SofaOnSofa.Domain.Entities.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Редактировать @Model.Name</h1>
@using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.EditorForModel()
    <div class="editor-label">Изображение</div>
    <div class="editor-field">
        @if (Model.ImageData == null)
        {
            @:None
        }
        else
        {
            <img width="150" height="150" src="@Url.Action("GetImage", "Product", new { Model.ProductId })" />
        }
        <div>
            Загрузить изображение:
            <input type="file" name="Image" />
        </div>
    </div>
    <input type="submit" value="Сохранить" />
    @Html.ActionLink("Завершить или вернуться к Списку товаров", "Index")
}

