<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
</head>
<body>
    <div id="header">
        @{ Html.RenderAction("Summary", "ShoppingCart"); }
        <div class="title" align="center">
            Диван на Диване
            <img src="~/Content/Images/Диван.png" width="80" height="40" align="top" />
        </div>
    </div>
    <div id="categories">
        @{ Html.RenderAction("Menu", "Nav"); }
    </div>
    <div id="content" style="height:700px">
        @RenderBody()
    </div>
    <div id="categories">
        <ul class="categories">
            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("Пользователь"))
                {
                    <li><a href="@Url.Action("UserArea", "Home")">Пользователь</a></li>
                }
                if (User.IsInRole("Админ"))
                {
                    <li><a href="@Url.Action("AdminArea", "Home")">Админ</a></li>
                    <li><a href="@Url.Action("Index","Admin")">Редактор</a></li>
                }
                <li><a href="@Url.Action("Logout", "Login")">Выйти</a></li>
            }
            else
            {
                <li><a href="@Url.Action("Login", "Login")">Войти</a></li>
                <li><a href="@Url.Action("Registration", "Login")">Регистрация</a></li>
            }
        </ul>
    </div>
</body>
</html>

<link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
