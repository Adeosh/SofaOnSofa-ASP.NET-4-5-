@model SofaOnSofa.Domain.Entities.ShippingDetails

@{
    ViewBag.Title = "Checkout";
}

<h2>Оплатить сейчас</h2>
Пожалуйста введите данные для доставки.
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <h3>Отправить в</h3>
    <div>Имя: @Html.EditorFor(x => x.Name)</div>
    <h3>Адрес</h3>
    <div>Улица: @Html.EditorFor(x => x.Street)</div>
    <div>Дом: @Html.EditorFor(x => x.House)</div>
    <div>Подъезд: @Html.EditorFor(x => x.Entrance)</div>
    <div>Страна: @Html.EditorFor(x => x.Country)</div>
    <div>Регион\Область: @Html.EditorFor(x => x.Region)</div>
    <div>Город: @Html.EditorFor(x => x.City)</div>
    <h3>Опции</h3>
    <label>
        @Html.EditorFor(x => x.PaidDelivery)
        Платная доставка
    </label>

    <p align="center">
        <input class="actionButtons" type="submit" value="Завершить заказ"
    </p>
}

