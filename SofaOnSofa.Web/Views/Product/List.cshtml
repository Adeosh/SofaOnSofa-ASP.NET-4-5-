@model SofaOnSofa.Web.Models.ProductList
@using SofaOnSofa.Web.HtmlHelpers

@{
    ViewBag.Title = "Products";
}

@foreach (var p in Model.Products)
{
    Html.RenderPartial("ProductSummary", p);
}

<div class="pager">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x, style = Model.CurrentStyle }))
</div>

